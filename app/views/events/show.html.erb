<div class="event">
  <div class="event-info row">
    <div class="col-md-12">
      <%= content_tag 'div', '',
                      class: 'event-background',
                      style: "background-image: url(#{asset_pack_path('media/images/event.jpg')})"
      %>

      <div class="event-info-inner row">
        <div class="col-md-6">
          <div class="event-description">
            <h1><%= @event.title %></h1>
            <h3><%= l @event.datetime, format: :short %></h3>
            <h3>
              <small><%= link_to @event.address, "https://yandex.ru/maps/?text=#{@event.address}" %></small>
            </h3>
            <p><%= @event.description %></p>
          </div>
          <% if current_user_can_edit?(@event) %>
            <div class="buffer-top">
              <%= link_to t('views.edit_event_link'), edit_event_path(@event), class: 'btn btn-primary' %>
            </div>
            <div class="buffer-top">
              <%= link_to t('views.remove_event_link'), event_path, method: :delete, data: { title: t('views.confirm.title'),
                                                                                             confirm: t('views.remove_event_question'),
                                                                                             commit: t('views.confirm.commit'),
                                                                                             cancel: t('views.confirm.cancel') },
                          class: 'btn btn-danger' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="event-comments buffer-top">
        <%= render partial: 'comments/form', locals: { comment: @new_comment || @event.comments.build } %>
        <div class="buffer-both">
          <%= render @event.comments.except(@new_comment) %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="event-owner">
        <h4>Зовет:</h4>
        <p><%= render @event.user %></p>
      </div>
      <div class="event-subscriptions">
        <h4>Пойдут:</h4>
        <div>
          <p>
            <%= render @event.subscriptions.except(@new_subscriptions) %>
          </p>
        </div>
      </div>
      <% if @event.user != current_user %>
        <div class="event-subscription-form">
          <h4>Я пойду:</h4>
          <div>
            <%= render partial: 'subscriptions/form', locals: { subscription: @new_subscription || @event.subscriptions.build } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
